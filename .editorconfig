[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 180
tab_width = 4
trim_trailing_whitespace = true

[{*.nix,*.yaml}]
indent_size = 2
tab_width = 2

[*.html]
max_line_length = off

[/.sqlx/**]
indent_size = unset
tab_width = unset
max_line_length = off

[flake.lock]
indent_size = unset
tab_width = unset
max_line_length = off
